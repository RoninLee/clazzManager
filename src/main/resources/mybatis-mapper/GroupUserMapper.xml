<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.school.manager.pojo.dao.GroupUserDao">
    <insert id="batchAdd">
        insert into group_user(user_id, group_id) VALUES
        <foreach collection="gus" separator="," index="index" item="gu">
            (#{gu.userId},#{gu.groupId})
        </foreach>
    </insert>
    <delete id="batchDel">
        delete from group_user where id = #{id} and user_id in
        <foreach collection="delUsers" item="userId" index="index" separator="," open="(" close=")">
            #{userId}
        </foreach>
    </delete>
    <delete id="delete">
        delete
        from group_user
        where group_id = #{groupId}
    </delete>

    <select id="getGroupNameByUser" resultType="com.school.manager.pojo.bo.GroupLeaderBO">
        select u.name as user_name, g.name as group_name
        from group_user gu
                 left join lesson_group g on gu.group_id = g.id
                 left join user u on gu.user_id = u.id
        where u.group_leader_flag = 1
          and gu.user_id = #{userId}
    </select>
    <select id="getGroupByGid" resultType="com.school.manager.pojo.entity.GroupUser">
        select id, group_id, user_id
        from group_user
        where group_id = #{groupId}
    </select>
    <select id="getByUserId" resultType="java.lang.Integer">
        select count(id)
        from group_user
        where user_id = #{userId}
    </select>
</mapper>