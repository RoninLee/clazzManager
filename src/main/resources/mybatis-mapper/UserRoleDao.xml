<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.school.manager.pojo.dao.UserRoleDao">
    <insert id="save" parameterType="com.school.manager.pojo.entity.UserRole">
        insert into user_role(id, user_id, role_id)
        VALUES (#{id}, #{userId}, #{roleId})
    </insert>
    <insert id="saveAll">
        insert into user_role(id, user_id, role_id)
        values
        <foreach collection="list" separator="," index="index" item="ur">
            (#{ur.id}, #{ur.userId}, #{ur.roleId})
        </foreach>
    </insert>
    <delete id="deleteByUserId">
        delete
        from user_role
        where user_id = #{userId}
    </delete>
    <select id="findUserRolesByUserId" resultType="com.school.manager.pojo.entity.UserRole">
        select id, user_id, role_id
        from user_role
        where user_id = #{userId}
    </select>
</mapper>